<style>
    body {
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }
    .galeria {
        position: relative;
        width: 500px;
        height: 300px;
        overflow: hidden;
        border: 2px solid #000;
    }
    .imagenes {
        display: flex;
        transition: transform 0.5s ease-in-out;
    }
    .imagenes img {
        width: 500px;
        height: 300px;
    }
    .boton {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        border: none;
        padding: 10px;
        cursor: pointer;
        z-index: 2;
    }
    .anterior {
        left: 10px;
    }
    .siguiente {
        right: 10px;
    }
</style>
</head>
<body>
<div class="galeria">
    <div class="imagenes">
        <img src="https://www.shutterstock.com/image-vector/suv-mpv-realistic-family-japan-600nw-2265305189.jpg" alt="Imagen 1">
        <img src="https://estaticos.elcolombiano.com/binrepository/780x585/0c10/780d565/none/11101/AHHH/11-volkswagen-taos-2022-1600-02_37072627_20210122201142.jpg" alt="Imagen 2">
        <img src="https://via.placeholder.com/500x300?text=Imagen+3" alt="Imagen 3">
    </div>
    <button class="boton anterior">&#10094;</button>
    <button class="boton siguiente">&#10095;</button>
</div>

<script>
    let indice = 0;
    const imagenes = document.querySelector('.imagenes');

    document.querySelector('.anterior').addEventListener('click', () => cambiarImagen(-1));
    document.querySelector('.siguiente').addEventListener('click', () => cambiarImagen(1));

    function cambiarImagen(direccion) {
        const total = imagenes.children.length;
        indice = (indice + direccion + total) % total;
        

    }
</script>
</body>