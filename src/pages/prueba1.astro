    <a href="/"><button class="boton2"> Volver</button></a>
    <main>
        <div class="car-details" id="carDetails">
            <img src="https://www.elcarrocolombiano.com/wp-content/uploads/2021/02/20210208-TOP-75-CARROS-MAS-VENDIDOS-DE-COLOMBIA-EN-ENERO-2021-01.jpg" alt="Carro">
            <h2 id="carName"></h2>
            <p id="carDescription"></p>
            <p id="carPrice"></p>
        </div>
    </main>
    
    

    <script>
        // Datos del carro (esto podría venir de una base de datos o una API)
        const carData = {
            name: "Carro 1",
            image: "https://www.elcarrocolombiano.com/wp-content/uploads/2021/02/20210208-TOP-75-CARROS-MAS-VENDIDOS-DE-COLOMBIA-EN-ENERO-2021-01.jpg",
            description: "Descripción del Carro 1.",
            price: "100.000"
        };

        // Función para cargar los detalles del carro en la página
        function loadCarDetails() {
            const carDetailsContainer = document.getElementById("carDetails");
            const carNameElement = document.getElementById("carName");
            const carDescriptionElement = document.getElementById("carDescription");
            const carPriceElement = document.getElementById("carPrice");
            const carImageElement = document.querySelector(".car-details img");

            carNameElement.textContent = carData.name;
            carDescriptionElement.textContent = carData.description;
            carPriceElement.textContent = "Precio: " + carData.price;
           
        }

        // Cargar los detalles del carro cuando la página se carga completamente
        window.onload = loadCarDetails;
    </script>
     
    


