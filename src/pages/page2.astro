---
import Menu from "../components/menu.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <Menu />
    <html lang="es">
        <head>
            <title>Presentación de Autos Hermosos</title>
            <link
                href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
                rel="stylesheet"
                integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
                crossorigin="anonymous"
            />
            <style>
                body {
                    font-family: "Arial", sans-serif;
                    background-color: #f4f4f4;
                    margin: 0;
                }
                .container {
                    max-width: 1200px;
                    margin: 0 auto;
                    padding: 20px;
                }
                .header {
                    text-align: center;
                    margin-bottom: 40px;
                }
                .header h1 {
                    font-size: 3em;
                    color: #333;
                }
                .car-card {
                    margin-bottom: 30px;
                    transition: transform 0.3s;
                }
                .car-card:hover {
                    transform: scale(1.1);
                }
                .car-image img {
                    max-width: 100%;
                    height: auto;
                    border-radius: 10px;
                }
                .car-details {
                    padding: 20px;
                    background-color: #fff;
                    border-radius: 0 0 10px 10px;
                    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                }
                .car-details h2 {
                    color: #333;
                    font-size: 1.5em;
                    margin-bottom: 10px;
                }
                .car-details p {
                    color: #666;
                    line-height: 1.6;
                }
            </style>
        </head>
        <body>
            <div class="container">
                <div class="header">
                    <h1>Modelos Disponibles</h1>
                </div>
                <div class="row">
                    <div class="col-md-4 car-card">
                        <div class="car-image">
                            <a href="/Project/4details">
                                <img
                                    src="https://www.diariomotor.com/imagenes/2016/03/aston-martin-db11-carretera-407557.jpg"
                                    alt="Aston Martin DB11"
                                />
                            </a>
                        </div>
                        <div class="car-details">
                            <h2>Aston Martin DB11</h2>
                            <p>
                                Elegancia y potencia combinadas en un diseño
                                sofisticado y aerodinámico.
                            </p>
                        </div>
                    </div>

                    <div class="col-md-4 car-card">
                        <div class="car-image">
                            <a href="/Project/5details">
                                <img
                                    src="https://i.pinimg.com/originals/5b/89/a1/5b89a18d91c52a3b5e8e5027311053b7.jpg"
                                    alt="Ferrari 488 GTB"
                                />
                            </a>
                        </div>
                        <div class="car-details">
                            <h2>Ferrari 488 GTB</h2>
                            <p>
                                Un icono de la belleza automotriz con líneas
                                deportivas y un perfil elegante.
                            </p>
                        </div>
                    </div>

                    <div class="col-md-4 car-card">
                        <div class="car-image">
                            <a href="/Project/6details">
                                <img
                                    src="https://jlr.scene7.com/is/image/jlr/X15224GL_303101393_021"
                                    alt="Jaguar F-Type"
                                />
                            </a>
                        </div>
                        <div class="car-details">
                            <h2>Jaguar F-Type</h2>
                            <p>
                                Conocido por su diseño estilizado e
                                impresionante rendimiento.
                            </p>
                        </div>
                    </div>

                    <div class="col-md-4 car-card">
                        <div class="car-image">
                            <a href="/Project/7details">
                                <img
                                    src="https://acnews.blob.core.windows.net/imgnews/medium/NAZ_0d7faecc57a949189a35c7aecca0bd57.jpg"
                                    alt="Lamborghini Huracán"
                                />
                            </a>
                        </div>
                        <div class="car-details">
                            <h2>Lamborghini Huracán</h2>
                            <p>
                                Un clásico atemporal que mantiene su atractivo
                                con un diseño evolutivo.
                            </p>
                        </div>
                    </div>

                    <div class="col-md-4 car-card">
                        <div class="car-image">
                            <a href="/Project/8details">
                                <img
                                    src="https://hips.hearstapps.com/hmg-prod/images/2019-dodge-challenger-srt-hellcat-redeye-comparison-104-1581425446.jpg?crop=0.651xw:0.489xh;0.0928xw,0.333xh&resize=1200:*"
                                    alt=""
                                />
                            </a>
                        </div>
                        <div class="car-details">
                            <h2>Dodge Charger SRT Hellcat</h2>
                            <p>
                                Una obra maestra de la ingeniería con un diseño
                                agresivo y líneas angulosas.
                            </p>
                        </div>
                    </div>

                    <div class="col-md-4 car-card">
                        <div class="car-image">
                            <a href="/Project/9details">
                                <img
                                    src="https://img.remediosdigitales.com/29438e/ford-mustang-shelby-gt500-mexico_/840_560.jpg"
                                    alt="Lamborghini Aventador"
                                />
                            </a>
                        </div>
                        <div class="car-details">
                            <h2>Ford Mustang Shelby GT500</h2>
                            <p>
                                Una obra maestra de la ingeniería con un diseño
                                agresivo y líneas angulosas.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </body>
    </html>
</Layout>
